# Example SafeNow.env (do NOT commit secrets into git)
# Copy this to SafeNow.env locally and fill values where needed.

# Authentication
API_KEY=devkey
ANTHROPIC_API_KEY=your-key-here  # Required for Claude API

# Model Configuration
DEFAULT_MODEL=claude-3-sonnet-20240229
FORCE_MODEL_FOR_ALL=true
PREDICT_TIMEOUT=10.0

# Safety Guardrails
MAX_INPUT_CHARS=1000
MAX_OUTPUT_CHARS=2000
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_STORE=memory  # memory or redis
RATE_LIMIT_WINDOW=60
RATE_LIMIT_REQUESTS=20

# Redis Configuration (if using redis rate limiter)
REDIS_URL=redis://localhost:6379/0

# Supabase Backup Backend (optional)
ENABLE_SUPABASE_BACKEND=true
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-key
SUPABASE_SCHEMA=public
SUPABASE_API_KEY_TABLE=api_key_metadata
SUPABASE_AUDIT_TABLE=audit_entries
SUPABASE_RETENTION_TABLE=retention_records
